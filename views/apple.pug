        - let destination2 = `dispatch(\"/apple/delete?id=${item._id}\")`
        - let destination3 = `dispatch(\"/apple/detail?id=${item._id}\")`
        div(class="row-sm-2" class="m-1") Item #{item.apple_type}(#{item.quantity}) is #{item.cost} 
          button.btn( class="btn-primary ml-1", onclick= destination) Update 
          button.btn( class="btn-secondary", onclick= destination2) Delete
          button.btn( class="btn-warning", onclick= destination3) View
script. 
  function dispatch(path){ 
    window.location.href=path 
  } 







